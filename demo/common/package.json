{
    "name": "common",
    "version": "1.0.0",

    "wow": {
        "name": "common",
        "path": "index",
        "deps": ["home", "ability"],

        "ds": {},

        "pack": {
            "static/pkg/pkg_common.js": [
                "static/js/base/require.js",
                "static/js/base/css.js",
                "static/js/base/jquery-1.10.1.js",
                "static/js/base/dust-core.js",
                "static/js/base/dust-helpers.js",
                "static/js/base/wowspg.js"
            ]
        },

        "router": {},

        "local": {
            "tasks": {
                "dusthtml": {
                    "options": {
                        "whitespace": true,
                        "context": "./test/index.json"
                    },
                    "controller": "dusthtml",
                    "files": [{
                        "expand": true,
                        "cwd": "./<%= output%>",
                        "src": "site/**/*.dust",
                        "dest": "./<%= output%>",
                        "ext": ".html",
                        "extDot": "last"
                    }]
                },
                "replace:tplSepRemove": {
                    "options": {
                        "reg": {
                            "\\{\\{[^\\{\\}]*\\}\\}": ""
                        }
                    },
                    "files": [{
                        "expand": true,
                        "cwd": "./site",
                        "src": "**/*.dust",
                        "dest": "./<%= output%>/site/<%= moduleName%>"
                    }]
                },
                "compilehtml": "dusthtml",
                "buildstart": ["replace:tplSepRemove"]
            }
        },
        "remote": {
            "domain": {
                "cdn": ""
            }
        }
    }
}