#!/usr/bin/env node

process.title = 'wow';

var path = require('path');

var aProcessArgs = process.argv,
    sArgTask = aProcessArgs[2],
    sArgAdded = aProcessArgs[3],
    objMapToGruntTask = {
        server: 'devserver'
    };

process.argv = [
    'node',
    'grunt',
    objMapToGruntTask[sArgTask] || sArgTask,
    '-b',
    '.',
    '--gruntfile',
    path.resolve(__dirname, '../lib') + path.sep + 'Gruntfile.js'
];

// init Grunt task
require('grunt').cli();